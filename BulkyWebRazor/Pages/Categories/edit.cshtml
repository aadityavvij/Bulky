@page
@model BulkyWebRazor.Pages.Categories.editModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="cat.Name"></label>
			<input asp-for="cat.Name" class="form-control" />
			<span asp-validation-for="cat.Name" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="cat.DisplayOrder"></label>
			<input asp-for="cat.DisplayOrder" class="form-control" />
			<span asp-validation-for="cat.DisplayOrder" class="text-danger"></span>

		</div>
		<button type="submit" class="btn btn-primary">Create</button>
		<a asp-page="/categories/index" class="btn btn-outline-secondary">Back to list</a>
	</div>
</form>